            self.itMSens += 1
            self.itBSens = 0

"""



avt = Avt(0,100,0.001)
v= []
ds = []
delta = []
i = 0

while i < 200 :

    #print("Distance courante : "+str(avt.currentVal))
    dist = random.gauss(42,5)
    #print("Distance envoyee : "+str(dist))
    avt.update(dist)
    v.append(avt.currentVal)
    ds.append(dist)
    delta.append(avt.delta)
    #time.sleep(0.1)
    i+=1

plt.plot(ds)
plt.plot(v)

print(avt.currentVal)
